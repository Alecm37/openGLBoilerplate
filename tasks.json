{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build glad.o",
            "type": "shell",
            "command": "/usr/bin/clang",
            "args": [
                "-c",
                "include/glad/glad.c",
                "-I${workspaceFolder}/include",
                "-o",
                "glad.o"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build with GLFW",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "glad.o",
                "-I${workspaceFolder}/include",
                "-Llibs",
                "${workspaceFolder}/libs/libglfw.3.dylib",
                "-o", "main",
                "-framework", "Cocoa",
                "-framework", "OpenGL",
                "-framework", "IOKit",
                "-Wl,-rpath,@executable_path/libs"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Build glad.o"],   // ðŸ‘ˆ ensures glad.o is built first
            "problemMatcher": ["$gcc"]
        }
    ]
}
